<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/d180dp"
    android:layout_margin="@dimen/d15dp"
    app:cardElevation="@dimen/d5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ivManagementBodyPerson"
            android:layout_width="match_parent"
            android:layout_height="@dimen/d130dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/d8dp"
            android:scaleType="fitCenter"
            android:layout_marginBottom="@dimen/d8dp"/>

        <TextView
            android:id="@+id/tvManagementBodyName"
            android:layout_below="@id/ivManagementBodyPerson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textSize="@dimen/s24sp" />

        <TextView
            android:id="@+id/tvManagementBodyProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/mgmt_body_grey"
            android:layout_below="@id/tvManagementBodyName"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/d8dp"/>
    </RelativeLayout>

</androidx.cardview.widget.CardView>
