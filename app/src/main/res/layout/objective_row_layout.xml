<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/d8dp"
    android:layout_marginEnd="@dimen/d16dp"
    android:layout_marginStart="@dimen/d16dp"
    android:layout_marginTop="@dimen/d8dp"
    app:cardElevation="@dimen/d5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/d16dp"
            android:padding="@dimen/d8dp"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/s16sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
